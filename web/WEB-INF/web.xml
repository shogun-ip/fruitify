        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>orderServlet</servlet-name>
        <url-pattern>/orderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editStockServlet</servlet-name>
        <url-pattern>/editStockServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>salesOverviewServlet</servlet-name>
        <url-pattern>/salesOverviewServlet</url-pattern>
    </servlet-mapping>
